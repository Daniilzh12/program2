<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="362.0" prefWidth="700.0" spacing="5.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.program2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <center>
          <TableView fx:id="table" editable="true" pickOnBounds="false" prefHeight="200.0" prefWidth="200.0">
              <columns>
              </columns>
          </TableView>
      </center></BorderPane>
    <GridPane prefHeight="115.0" prefWidth="664.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <HBox prefHeight="26.0" prefWidth="194.0" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <Label text="Дата">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <DatePicker fx:id="Date" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="7">
            <Label text="Фамилия">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="family" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label text="Отчество">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="patronymic" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <Label text="Вставка по ключу">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="input" prefHeight="25.0" prefWidth="27.0" />
            <Button mnemonicParsing="false" onAction="#insertAfter" text="После" />
            <Button mnemonicParsing="false" onAction="#insertBefore" text="До" />
            <Button mnemonicParsing="false" onAction="#insertInto" text="Вместо" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.halignment="CENTER" GridPane.rowIndex="4">
            <Label text="Имя">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="name" />
        </HBox>
        <HBox prefHeight="28.0" prefWidth="660.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Label text="Поиск по ключу">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
            </Label>
            <TextField fx:id="search" prefHeight="25.0" prefWidth="33.0" />
            <Button mnemonicParsing="false" onAction="#search" text="Поиск" />
        </HBox>
    </GridPane>
   <ToolBar prefHeight="40.0" prefWidth="200.0">
      <items>
           <Button mnemonicParsing="false" onAction="#addClick" text="Добавить запись" />
         <MenuButton mnemonicParsing="false" text="Визуализированная сортировка">
           <items>
             <MenuItem mnemonicParsing="false" onAction="#bubbleSort" text="Сортировка пузырьком по дате" />
             <MenuItem mnemonicParsing="false" onAction="#shellSort" text="Сортировка Шелла по именам" />
               <MenuItem mnemonicParsing="false" onAction="#insertSort" text="Сортировка вставками по ID" />
           </items>
         </MenuButton>
      </items>
   </ToolBar>
</VBox>
